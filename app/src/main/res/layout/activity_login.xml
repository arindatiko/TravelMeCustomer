<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/lobster"
        android:lineSpacingExtra="6dp"
        android:text="TravelMe"
        android:textSize="38sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layout_login"
        android:visibility="gone"
        android:layout_marginTop="200dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon"
                android:inputType="number"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <com.xwray.passwordview.PasswordView
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:password="true"
                android:inputType="textPassword"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_below="@id/txtPassword"
            android:text="MASUK"
            android:fontFamily="@font/comfortaa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorBlackLa"
            android:fontFamily="@font/comfortaar"
            android:id="@+id/signup"
            android:text="@string/daftar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/layout_daftar"
        android:layout_marginTop="200dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtUsername_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtTelp_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon"
                android:text="08xxx"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <com.xwray.passwordview.PasswordView
                android:id="@+id/txtPassword_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:password="true"
                android:inputType="textPassword"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Verifikasi"
                android:inputType="number"
                android:fontFamily="@font/comfortaa"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </android.support.design.widget.TextInputLayout>

        <!--<Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnVerify"
            android:layout_below="@id/txtVerify"
            android:text="DAPATKAN KODE"
            android:fontFamily="@font/comfortaa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>-->

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDaftar"
            android:layout_below="@id/txtPassword"
            android:text="DAFTAR"
            android:fontFamily="@font/comfortaa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorBlackLa"
            android:fontFamily="@font/comfortaar"
            android:id="@+id/login"
            android:text="@string/login"/>
    </LinearLayout>
</RelativeLayout>