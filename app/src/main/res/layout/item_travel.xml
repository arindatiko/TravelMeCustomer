<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ln_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="28dp">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.00 wib - 20.00 wib"
                    android:textSize="10sp"
                    android:textColor="@color/colorBlackLc"
                    android:maxLines="1"
                    android:fontFamily="@font/segoe"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantai Sanggar"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackLa"
                    android:maxLines="1"
                    android:fontFamily="@font/segoe"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desa Karangasem, Kecamatan Kalidawir, Kabupaten Tulungagung"
                    android:textSize="10sp"
                    android:textColor="@color/colorBlackLc"
                    android:maxLines="2"
                    android:fontFamily="@font/segoe"/>

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:minLines="1"
                    android:textColor="@color/colorBlackLc"
                    android:fontFamily="@font/segoe"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="271.88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/ln_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:translationZ="10dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 200.000,-"
                android:fontFamily="@font/seguisb"/>

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                android:tint="@color/colorBlackLb"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"/>

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:tint="@color/colorBlackLd"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>