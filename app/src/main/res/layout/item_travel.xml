                    android:layout_height="wrap_content"
                    android:text="DONE"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/segoe"
                    android:layout_centerInParent="true"/>

